# LIVE TRADING Configuration - REAL MONEY AT RISK
# ⚠️ WARNING: This uses real money! Double-check all settings!

# LIVE TRADING MODE
DATA_SOURCE=ccxt
EXCHANGE_NAME=binance
USE_SANDBOX=false                   # ⚠️ REAL MONEY MODE!

# Trading symbols
SYMBOLS=BTC/USDT,ETH/USDT
TIMEFRAME=1h                        # 1 hour for live trading

# PRODUCTION API KEYS - GET FROM EXCHANGE
# Make sure these have trading permissions!
EXCHANGE_API_KEY=your_production_api_key
EXCHANGE_API_SECRET=your_production_secret

# Strategy selection
STRATEGY_NAME=sma                   # sma, rsi, breakout
# NEVER use "test" strategy for live trading!

# Live trading settings
INITIAL_CAPITAL=1000                # Your actual trading capital
MAX_POSITION_SIZE=0.05             # 5% max position size
STOP_LOSS_PCT=0.02                 # 2% stop loss
COMMISSION=0.001                   # 0.1% commission
SLIPPAGE=0.0005                    # 0.05% slippage
ALLOW_SHORT=false                  # Disable shorts for safety

# SMA Strategy parameters
STRATEGY_SHORT_WINDOW=20
STRATEGY_LONG_WINDOW=50
STRATEGY_STOP_LOSS_PCT=2.0
STRATEGY_TAKE_PROFIT_PCT=4.0

# Breakout Strategy parameters (if using breakout)
STRATEGY_ENTRY_LOOKBACK=20
STRATEGY_EXIT_LOOKBACK=10
STRATEGY_ATR_PERIOD=14
STRATEGY_ATR_MULTIPLIER=2.0

# Monitoring
LOG_LEVEL=INFO
ALERT_EMAIL=your_email@example.com