# IBKR Live Trading Configuration  
# This configuration connects to TWS/IB Gateway in live trading mode
# WARNING: This will place real trades with real money!

# Connection settings
IBKR_HOST=127.0.0.1
IBKR_PORT=7496                    # Live trading TWS port (7496) or Gateway (4001)
IBKR_CLIENT_ID=2                  # Unique client ID (0-32) - different from paper

# Account settings
IBKR_ACCOUNT_TYPE=live            # paper or live
IBKR_ACCOUNT_ID=                  # Your live account ID (required for live trading)

# Market data settings
IBKR_MARKET_DATA_TYPE=1           # 1=live, 2=frozen, 3=delayed, 4=delayed_frozen

# Connection management
IBKR_CONNECT_TIMEOUT=10           # Connection timeout in seconds
IBKR_READ_TIMEOUT=30              # Read timeout in seconds
IBKR_AUTO_RECONNECT=true          # Enable auto-reconnection
IBKR_MAX_RECONNECT_ATTEMPTS=5     # Max reconnection attempts
IBKR_RECONNECT_DELAY=5            # Delay between reconnections

# Rate limiting
IBKR_MAX_REQUESTS_PER_SECOND=50   # Max API requests per second
IBKR_HISTORICAL_DATA_TIMEOUT=60   # Historical data request timeout

# Logging
IBKR_LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR

# Trading bot settings (use IBKR as data source)
DATA_SOURCE=ibkr
USE_SANDBOX=false                 # Live trading mode
STRATEGY_NAME=sma
INITIAL_CAPITAL=10000.0

# Risk management (IMPORTANT for live trading)
MAX_POSITION_SIZE=0.05            # Maximum 5% position size
STOP_LOSS_PCT=0.02                # 2% stop loss
DAILY_LOSS_LIMIT=500.0            # Daily loss limit in base currency