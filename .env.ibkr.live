# IBKR Live Trading Configuration
# WARNING: This is for LIVE trading with REAL money!

# Data Source Configuration
DATA_SOURCE=ibkr

# IBKR Connection Settings
IBKR_ACCOUNT_TYPE=live              # live or paper
IBKR_HOST=127.0.0.1                # TWS/Gateway host
IBKR_PORT=7496                     # 7496=live TWS, 4001=live Gateway
IBKR_CLIENT_ID=1                   # Unique client ID (0-32)
IBKR_ACCOUNT_ID=your_account_id    # Your IBKR account ID

# Market Data Settings
IBKR_MARKET_DATA_TYPE=1            # 1=Live, 2=Frozen, 3=Delayed, 4=Delayed+Frozen

# Connection Settings
IBKR_CONNECT_TIMEOUT=10            # Connection timeout in seconds
IBKR_READ_TIMEOUT=30               # Read timeout in seconds
IBKR_AUTO_RECONNECT=true           # Auto-reconnect on disconnect
IBKR_MAX_RECONNECT_ATTEMPTS=5      # Max reconnection attempts
IBKR_RECONNECT_DELAY=5             # Delay between reconnection attempts

# API Rate Limiting
IBKR_MAX_REQUESTS_PER_SECOND=50    # Max API requests per second
IBKR_HISTORICAL_DATA_TIMEOUT=60    # Historical data timeout

# Trading Settings
SYMBOLS=AAPL,MSFT,GOOGL,TSLA       # Symbols to trade (comma-separated)
TIMEFRAME=1h                       # Trading timeframe
STRATEGY_NAME=sma                  # Strategy to use

# Strategy Parameters
STRATEGY_SHORT_WINDOW=20           # Short MA window
STRATEGY_LONG_WINDOW=50            # Long MA window
STRATEGY_STOP_LOSS_PCT=2.0         # Stop loss percentage
STRATEGY_TAKE_PROFIT_PCT=4.0       # Take profit percentage

# Risk Management
INITIAL_CAPITAL=10000              # Initial capital for calculations
MAX_POSITION_SIZE=0.1              # Max position size as % of capital
STOP_LOSS_PCT=0.05                 # Stop loss percentage

# Logging
LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR
IBKR_LOG_LEVEL=INFO               # IBKR-specific log level

# State Management
STATE_DIRECTORY=data/state         # Directory for state files
DATA_LOOKBACK_DAYS=30             # Days of historical data to cache